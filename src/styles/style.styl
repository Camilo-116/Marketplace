* {
    font-family: 'Rubik', sans-serif;
}

body {
    margin: 0;
    padding: 0;
    background-color: #F5F5F5;

    #root {
        position: relative;

        .to-dashboard {
            display: flex;
            align-items: center;
            position: absolute;
            top: 2vh;
            right: 2vw;
            background-color: #fff;
            border-radius: 5px;
            padding: 5px 10px;

            p {
                margin: 0;
                user-select: none;
            }

            &:hover {
                opacity: 0.9;
                box-shadow: 0 0 10px 0 rgba(255, 255, 255, 0.438);
                cursor: pointer;
            }

            i {
                margin-right: 5px;
            }
        }

        .top-background {
            height: 30vh;
            width: 100vw;

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
        }

        .search-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            position: absolute;
            height: 17vh;
            width: 100vw;
            top: 21.5vh;

            .search-image {
                position: absolute;
                z-index: 2;
                top: -18.5vh;
                right: 40%;
                height: 21.5vh;
                width: 21.5vw;

                img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }
            }

            .search-container {
                display: flex;
                z-index: 3;
                justify-content: center;
                box-sizing: border-box;
                width: 60%;
                padding: 5vh 5vw;
                height: 100%;
                background-image: linear-gradient(to right, #06E3AC, #19BDF6);

                form {
                    display: flex;
                    flex-flow: row nowrap;
                    justify-content: center;
                    align-items: center;
                    width: 100%;
                    height: 100%;

                    .search-input {
                        width: 100%;
                        height: 100%;
                        flex: 3;
                        border: none;
                        border-radius: 5px 0 0 5px;
                        padding: 0 1vw;
                        font-size: 0.8rem;
                        font-weight: 500;
                        color: black;
                        background-color: #F5FFFF;

                        &::placeholder {
                            color: rgb(65, 65, 65);
                        }
                    }

                    .search-categories {
                        width: 100%;
                        height: 100%;
                        flex: 1;
                        border: none;
                        border-left: 0.5px solid rgb(145, 145, 145);
                        border-radius: 0 5px 5px 0;
                        padding: 0 1vw;
                        font-size: 0.8rem;
                        font-weight: 500;
                        color: rgb(65, 65, 65);
                        background-color: #F5FFFF;
                    }

                    .search-button {
                        box-sizing: border-box;
                        width: 100%;
                        height: 100%;
                        flex: 1;
                        border: none;
                        border-radius: 3px;
                        margin-left: 1vw;
                        padding: 0 0.8vw;
                        font-size: 1rem;
                        font-weight: bold;
                        color: #fff;
                        background-color: #2B3739;
                        cursor: pointer;
                    }

                    button {
                        border: none;
                        border-radius: 5px;
                        padding: 0 1vw;
                        font-size: 1.5rem;
                        font-weight: 500;
                        color: #fff;
                        background-color: transparent;
                        cursor: pointer;
                    }
                }
            }
        }

        .pag-band {
            box-sizing: border-box;
            display: flex;
            flex-flow: row nowrap;
            justify-content: space-between;
            align-items: center;
            margin-left: 15vw;
            width: 70%;
            background-color: #fff;
            padding: 2vh 1vw;
            border-left: 7px solid #06E3AC;
            font-weight: bold;
            box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.2);

            .nav-buttons {
                button {
                    border-radius: 2px;
                    padding: 6px 15px;
                    border: none;
                    cursor: pointer;
                    color: #fff;
                    background-color: #06E3AC;

                    &:first-child {
                        margin-right: 0.5vw;
                    }

                    &[disabled] {
                        opacity: 0.5;
                        cursor: not-allowed;
                    }
                }
            }
        }

        .products {
            display: flex;
            flex-flow: row wrap;
            justify-content: space-between;
            padding: 30px 15vw 0 15vw;

            .p-image {
                img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }
            }

            .product-card {
                box-sizing: border-box;
                width: 22%;
                margin-right: 1%;
                margin-bottom: 30px;
                background-color: #fff;
                padding: 5px;
                box-shadow: 0 0 3px 0 rgba(0, 0, 0, 0.2);

                &:nth-child(4n), &:last-child {
                    margin-right: 0;
                }

                .info-padding {
                    padding: 15px 10px 0 10px;

                    .info {
                        .p-name {
                            font-size: 1.1rem;
                            font-weight: bold;
                            color: #000;
                        }

                        .p-description {
                            display: -webkit-box;
                            -webkit-line-clamp: 1;
                            -webkit-box-orient: vertical;
                            text-overflow: ellipsis;
                            overflow: hidden;
                            font-size: 0.8rem;
                            font-weight: 500;
                            color: rgb(111, 111, 111);
                        }

                        .row {
                            margin: 10px 0;

                            .p-category {
                                font-size: 0.8rem;
                                font-weight: bold;
                                color: #00c291;
                            }

                            .p-price {
                                font-size: 0.8rem;
                                font-weight: bold;
                                color: #000;
                                align-items: center;

                                &:before {
                                    content: '$ ';
                                    font-size: 0.6rem;
                                }
                            }
                        }
                    }

                    .product-pub {
                        display: flex;
                        flex-flow: row nowrap;
                        align-items: center;
                        justify-content: space-between;

                        .pub-info {
                            display: flex;
                            flex-flow: row nowrap;
                            align-items: center;

                            .p-pub-avatar {
                                img {
                                    width: 30px;
                                    height: 30px;
                                    border-radius: 50%;
                                    margin-right: 5px;
                                    object-fit: cover;
                                }
                            }

                            .p-publisher {
                                font-size: 0.7rem;
                                font-weight: bold;
                                color: black;
                            }
                        }

                        .rating {
                            font-size: 0.5rem;
                            justify-self: flex-end;
                            color: rgb(224, 210, 18);
                        }
                    }
                }

                hr {
                    border: 1px solid rgba(0, 0, 0, 0.136);
                }
            }
        }

        .crud {
            padding: 30px 10vw 5vh 10vw;

            .to-home {
                color: #000;
                text-decoration: none;
            }

            .crud-actions {
                display: flex;
                flex-flow: row nowrap;

                .add-product {
                    display: flex;
                    box-sizing: border-box;
                    flex: 1;
                    flex-flow: column nowrap;
                    justify-content: flex-start;
                    align-items: left;
                    margin-right: 1vw;

                    label {
                        display: flex;
                        flex-flow: column nowrap;
                        margin-bottom: 15px;

                        input {
                            margin-top: 5px;
                            width: 80%;
                            border-radius: 5px;
                            border: none;
                            box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.2);
                            padding: 5px;

                            &:focus {
                                outline: none;
                                border: 1px solid #00c291;
                            }
                        }
                    }

                    .action-button {
                        button {
                            color: #fff;
                            background-color: #00c291;
                            border: none;
                            border-radius: 5px;
                            padding: 5px 10px;

                            &:hover {
                                cursor: pointer;
                                opacity: 0.8;
                                box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2);
                            }
                        }
                    }
                }

                .products-table {
                    flex: 2;
                    border-collapse: collapse;

                    td, th {
                        border: 1px solid #ddd;
                        text-align: center;
                    }

                    th {
                        box-sizing: border-box;
                        background-color: #00c291;
                        text-align: left;
                        padding: 12px 8px 12px 8px;
                        font-weight: bold;
                        color: #fff;
                    }

                    tr {
                        &:nth-child(even) {
                            background-color: #e9e9e9;
                        }
                    }

                    .products-table-row {
                        td {
                            padding: 2px 8px 2px 8px;
                            font-size: 0.8rem;
                        }

                        .buttons {
                            white-space: nowrap;

                            button {
                                border: none;
                                border-radius: 5px;
                                color: #fff;
                                padding: 5px 10px;
                                cursor: pointer;

                                &:hover {
                                    opacity: 0.8;
                                    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2);
                                }

                                &:first-child {
                                    background-color: #00c291;
                                    margin-right: 10px;
                                }

                                &:last-child {
                                    background-color: #ff0000;
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

.row {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
}